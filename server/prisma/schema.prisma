// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Susține Autentificarea, Sesiunile și Setările (Moneda)
model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String        // Va stoca parola hash-uită (criptată)
  name         String?
  currency     String        @default("USD") // Susține butoanele USD/EUR/RON
  transactions Transaction[]
  watchlists   Watchlist[]
  createdAt    DateTime      @default(now())
}

// 2. Susține Simulatorul, Activele și Alertele (Sectoare)
model Asset {
  id           Int            @id @default(autoincrement())
  symbol       String         @unique // ex: AAPL, BTC
  name         String         // ex: Apple Inc., Bitcoin
  type         String         // ex: STOCK, CRYPTO (Pentru Pie Chart-ul de Alocare)
  sector       String?        // ex: Technology (Pentru alerta "Tech sector concentration")
  currentPrice Float          @default(0) // Prețul fix de ACUM
  transactions Transaction[]
  watchlists   Watchlist[]
  priceHistory PriceHistory[] // Legătura cu istoricul
  updatedAt    DateTime       @updatedAt
}

// NOU: 3. Susține Graficul de Evoluție (Line Chart)
model PriceHistory {
  id        Int      @id @default(autoincrement())
  assetId   Int
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  price     Float    // Prețul pe care îl avea activul la acel moment
  timestamp DateTime @default(now()) // Data și ora exactă
}

// 4. Susține pagina "My Assets" (Tranzacțiile, P&L, Avg Buy Price)
model Transaction {
  id              Int      @id @default(autoincrement())
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  assetId         Int
  asset           Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
  type            String   // 'BUY' sau 'SELL'
  quantity        Float    // Câte bucăți ai cumpărat/vândut
  priceAtPurchase Float    // Prețul per bucată la momentul tranzacției (Avg. Buy Price)
  date            DateTime @default(now())
}

// 5. Susține zona de "Watchlist" din Dashboard
model Watchlist {
  id      Int   @id @default(autoincrement())
  userId  Int
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  assetId Int
  asset   Asset @relation(fields: [assetId], references: [id], onDelete: Cascade)

  // Un utilizator nu poate avea același activ de două ori în watchlist
  @@unique([userId, assetId]) 
}
